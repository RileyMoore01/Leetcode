/*Create a new table called friends*/
CREATE TABLE friends (
  id INTEGER, 
  name TEXT, 
  birthday DATE
);

/*Add Ororo Munroe to the table*/
INSERT INTO friends (id, name, birthday)
VALUES (1, 'Ororo Munroe', '1940-05-30');

/*Print table after adding*/
SELECT * FROM friends;

